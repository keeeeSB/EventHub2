<h2 class="text-center">イベント作成</h2>

<div class="d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @event, url: user_events_path(current_user), local: true) do |f| %>
      <%= render "shared/error_messages", object: @event %>

      <div class="mb-3">
        <%= f.label :title, "タイトル", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "内容", class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :start_time, "開催日時", class: "form-label" %>
        <%= f.datetime_field :start_time, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :location, "開催場所", class: "form-label" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>

      <div>
        <%= f.label :category_id, "カテゴリーを選択", class: "form-label" %>
        <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "" }, { class: "form-control" } %>
      </div>

      <p class="m-2 text-center">or</p>

      <%= form_with(model: @category, url: categories_path, local: true) do |category_form| %>
        <div class="mb-4">
          <%= category_form.label :name, "カテゴリーを作成", class: "form-label" %>
          <%= category_form.text_field :name, class: "form-control" %>
        </div>
      <% end %>

      <div class="mb-3 text-center">
        <%= f.submit "作成", class: "btn btn-outline-success" %>
      </div>
    <% end %>
  </div>
</div>
